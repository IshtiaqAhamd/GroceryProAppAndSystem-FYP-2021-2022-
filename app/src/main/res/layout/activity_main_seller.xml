<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSellerActivity">

    <!--My Custom Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_logout_white"></ImageButton>

        <ImageButton
            android:id="@+id/editProfileBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/logoutBtn"
            android:background="@null"
            android:src="@drawable/ic_edit_white"></ImageButton>
        <!-- Add Product-->
        <ImageButton
            android:id="@+id/addProductBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/editProfileBtn"
            android:background="@null"
            android:src="@drawable/icadd_shopping_white"></ImageButton>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_store_gray"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/profileIv"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/shopNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTv"

            android:layout_toEndOf="@id/profileIv"
            android:text="Shop Name"
            android:textColor="@color/colorWhite"></TextView>

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profileIv"
            android:layout_below="@id/shopNameTv"
            android:text="Email"
            android:textColor="@color/colorWhite">
        </TextView>
    </RelativeLayout>

</RelativeLayout>